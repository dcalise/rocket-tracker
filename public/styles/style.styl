@import 'reset.styl'
@import 'columns.styl'
html
	overflow-y scroll
body
	font-family 'Open Sans', sans-serif
	h1,h2,h3
		font-family 'Russo One', sans-serif
		font-size 24px
		font-weight normal
	h2
		font-size 18px
		margin-bottom 13px
	background-image url('../images/bg.jpg')
	.wrapper
	.container
		width 100%
		max-width 972px
		margin 0 auto
		.header-wrapper
			padding 10px 0
	.clearfix
		clear both
		float none
header
	background rgba(0,0,0,.87)
	.header-wrapper
		.logo
			float left
		nav
			float right
			li
				float left
				padding 22px
				a
					text-decoration none
					font-weight 700
					color #fff
					text-transform uppercase
					&:hover
						color #289413
.search-bar
	background rgba(0,0,0,.67)
	display none
	.search
		width 100%
		margin 0 auto
		padding 15px 30px
		form
			input
				background rgba(255,255,255,.1)
				color #fff
				padding 10px
				border 1px solid #333
				width 81%
			button
				background #4c8c48
				padding 10px
				border 1px solid #289413
				color #fff
				text-transform uppercase
				i 
					margin-left 7px
.content
	background rgba(0,0,0,.87)
	color #fff
	margin 30px 0
	height 800px
	table
		width 100%
		font-size 14px
		border-bottom 1px solid rgba(63,63,63,.36)
		border-radius 3px
		tr
			border-left 1px solid rgba(63,63,63,.36)
			border-right 1px solid rgba(63,63,63,.36)
			&:nth-child(even)
				background rgba(63,63,63,.36)
			th
				text-align left
				background rgba(103,105,103,.36)
			th,td
				padding 11px 10px
	// profile page
	.profile-header
		display table
		.avatar
			display inline-block
			float left
			width 100px
			height 100px
			background #333
			margin-right 20px
		.profile-info
			display table-cell
			vertical-align middle
			p.last-played
				font-size 14px
				color #bfbfbf
				span
					color #81cc7d
	.main
		padding 20px
		& > div
			margin-bottom 20px
		&#home
			p
				margin 20px 0
		// user list
		&#users
			table
				tr
					td,th
						text-align right
						&:nth-child(1),
						&:nth-child(2)
							text-align left
		
		
					
	
		
						